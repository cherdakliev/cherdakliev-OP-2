        <Label Content="Порушення правил:" HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="12" Width="134" Height="32" Margin="141,472,49,0" Foreground="#FFFEFEFE" FontFamily="Microsoft JhengHei" Grid.Column="1"/>
        <Label Content="Статистика" HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="20" Width="130" Height="34" Margin="268,373,251,0" Foreground="#FFFEFEFE" FontFamily="Microsoft JhengHei" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="Ht_Poss" Content="50" HorizontalAlignment="Center" VerticalAlignment="Top" 
