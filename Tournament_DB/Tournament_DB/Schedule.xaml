        <Image x:Name="Gt_img" Grid.Column="2" HorizontalAlignment="Center" Height="150" Margin="150,53,25,0" VerticalAlignment="Top" Width="150" Source="D:\study\курсач\Tournament_DB\Tournament_DB\images\лив.png"/>
        <Label Content="Склад" HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="24" Width="83" Height="44" Margin="19,211,222,0" Foreground="#FFFEFEFE" FontFamily="Microsoft JhengHei" Grid.Column="1"/>
