            FontSize="16" Width="163" Height="34" Margin="83,530,78,0" Foreground="#FFBBBBBB" FontFamily="Microsoft JhengHei" Grid.Column="1"/>
        <DataGrid x:Name="Games" HorizontalAlignment="Left" Height="249"
