            </Button.Background>
        </Button>
        <Separator HorizontalAlignment="Left" Height="100" Margin="-41,235,0,0" VerticalAlignment="Top" Width="570" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Background="White">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.014"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Label Content="Команда 1:" HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="14" Width="82" Height="29" Margin="10,139,151,0" Foreground="#FFFEFEFE" FontFamily="Microsoft JhengHei" Grid.Column="0"/>
        <Label Content="Команда 2:" HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="14" Width="82" Height="29" Margin="10,168,151,0" Foreground="#FFFEFEFE" FontFamily="Microsoft JhengHei" Grid.Column="0"/>
        <ComboBox x:Name="Ht_Team" HorizontalAlignment="Left" Margin="97,146,0,0" VerticalAlignment="Top" Width="133" SelectionChanged="Ht_Team_SelectionChanged"/>
        <ComboBox x:Name="Gt_Team" HorizontalAlignment="Left" Margin="97,173,0,0" VerticalAlignment="Top" Width="133" SelectionChanged="Gt_Team_SelectionChanged"/>
