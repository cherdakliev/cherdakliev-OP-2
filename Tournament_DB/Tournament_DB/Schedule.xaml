        <Label Content="Дата:" HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="20" Width="68" Height="34" Margin="10,526,246,0" Foreground="#FFFEFEFE" FontFamily="Microsoft JhengHei" Grid.Column="1"/>
