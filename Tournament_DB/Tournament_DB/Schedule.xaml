            VerticalAlignment="Bottom" Width="223" Height="30" FontSize="18"  Foreground="#FFB0B0B0" 
            MouseEnter="Button_MouseEnter"
            MouseLeave="Button_MouseLeave" BorderThickness="10" Style="{StaticResource MyButton}" Click="Search_But_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FF1C2B46" Offset="0.006"/>
                    <GradientStop Color="#FF101317" Offset="1"/>
                    <GradientStop Color="#FF12161C" Offset="0.87"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Exit_But" Content="Вихід" HorizontalAlignment="Center" Margin="10,0,13,14" 
            VerticalAlignment="Bottom" Width="220" Height="40" FontSize="24"  Foreground="#FFB0B0B0" 
            MouseEnter="Button_MouseEnter"
            MouseLeave="Button_MouseLeave" BorderThickness="10" Style="{StaticResource MyButton}" Click="Exit_But_Click">
