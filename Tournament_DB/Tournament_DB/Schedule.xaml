            MouseEnter="Button_MouseEnter"
            MouseLeave="Button_MouseLeave" BorderThickness="10" Style="{StaticResource MyButton}" Click="Clear_But_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FF1C2B46" Offset="0.006"/>
                    <GradientStop Color="#FF101317" Offset="1"/>
                    <GradientStop Color="#FF12161C" Offset="0.87"/>
